\setbeamerfont{author}{size=\normalsize}
\setbeamerfont{date}{size=\small}
\setbeamerfont{institute}{size=\small}


\setbeamertemplate{title page}{%
    {%
        \usebeamerfont{title}
        \MakeUppercase\inserttitle
    }
    \par\medskip

    {%
        \rule{\linewidth}{1pt}
    }
    \par\medskip

    {%
        \usebeamerfont{author}
        \insertauthor
    }
    \par\smallskip

    {%
        \usebeamerfont{date}
        \insertdate
    }
    \par
    {%
        \usebeamerfont{institute}
        \insertinstitute
    }

