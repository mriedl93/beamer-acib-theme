\setbeamertemplate{background}{
    \begin{tikzpicture}[remember picture,overlay]
        \node (aciblogo) [xshift=22pt,yshift=12pt] at (current page.south west)
        { \includegraphics[height=.5cm]{img/logo_acib_500.png} };
        \node (bokulogo) [right=0.3cm of aciblogo]
        { \includegraphics[height=.4cm]{img/BOKU-Logo-Department-DBT-E.pdf} };
        \node (bokulogo) [right=0.3cm of bokulogo]
        { \includegraphics[height=.4cm]{img/biotop.png} };

        \draw [ultra thin] (current page.south east)++(0,.7cm) -- +(-.7\paperwidth,0);
    \end{tikzpicture}
}

\setbeamertemplate{frametitle}{%
    \begin{beamercolorbox}[ht=.9cm,wd=\paperwidth]{white}
        \hspace{.5cm}
        \begin{minipage}{.7\paperwidth}
            \nointerlineskip
            {%
                % \usebeamercolor[fg]{frametitle}
                \setstretch{0.8}
                \usebeamerfont{frametitle}%
                \strut\insertframetitle\strut\newline
            }%
            \ifx\insertframesubtitle\@empty\else%
                {%
                    \setstretch{0}%
                    \usebeamerfont{framesubtitle}%
                    \strut\insertframesubtitle\strut\par
                }%
            \fi%
            % \medskip
            \vskip-10pt%
            {%
                \rule{.9\paperwidth}{.3pt}%
            }%
        \end{minipage}
        \begin{minipage}{.2\paperwidth}
            \flushright
            {\footnotesize\textit{\insertsectionhead}}\\[-8pt]
            {\tiny\textit{\insertsubsectionhead}}
        \end{minipage}
    \end{beamercolorbox}
}

\setbeamertemplate{footline}{%
    \begin{beamercolorbox}[sep=0.3cm,ht=.7cm,wd=\paperwidth]{white}
        \hspace{.3\paperwidth}
        \begin{minipage}{.53\paperwidth}
        \insertauthor \quad --- \quad \insertevent\; \insertdate
        \end{minipage}
        \begin{minipage}{.1\paperwidth}
            \flushright
            \insertframenumber
        \end{minipage}
    \end{beamercolorbox}

}

\setbeamertemplate{navigation symbols}{}
